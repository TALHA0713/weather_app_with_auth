
<div class="container-fluid mainz_header" style="flex-grow: 1;">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            
            <div class="main_content">
                <form action="" class="temp_form">
                    <input type="text"  id="cityName" placeholder="Enter Your City Name" autocomplete="on">
                    <input type="submit" value="search" id="submitBtn">
                </form>
            </div>

            <div class="tempInformation">
                <div class="top_layer">
                    <p id="day">Tuesday</p>
                    <p id="date">21 August</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get output here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span id="temp_real">0</span> <sup>o</sup>C</p>
                        <p id="temp_status"><i class="fas fa-cloud"></i></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>